<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.technothrone.questionPage">
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/question"
        android:text="question"/>

    <TextView
        android:id="@+id/optiona"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/question"
        android:layout_marginTop="22dp"
         />

    <TextView
        android:id="@+id/optionb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/optiona"
        android:layout_marginTop="23dp"
         />

    <TextView
        android:id="@+id/optionc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/question"
        android:layout_alignRight="@+id/question"
        android:layout_below="@+id/optionb"
        android:layout_marginTop="17dp"
         />

    <TextView
        android:id="@+id/optiond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/optionc"
        android:layout_alignStart="@+id/optionc"
        android:layout_below="@+id/optionc"
        android:layout_marginTop="24dp"
         />

</RelativeLayout>
